        <TextView
            android:id="@+id/BulletinCommentText2"
            android:text="comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dip"
            android:textColor="#000000"
            android:paddingLeft="0dip" />
    </LinearLayout>
